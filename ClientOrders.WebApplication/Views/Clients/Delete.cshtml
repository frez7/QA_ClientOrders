@model ClientOrders.Data.Models.Entities.Client

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Удаление</h1>

<h3>Вы действительно хотите удалить клиента?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            <label style="color:black">ID Клиента:</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class="col-sm-2">
            <label style="color:black">Имя Клиента:</label>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt class="col-sm-2">
            <label style="color:black">Фамилия Клиента:</label>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SecondName)
        </dd>
        <dt class="col-sm-2">
            <label style="color:black">Номер Телефона:</label>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PhoneNum)
        </dd>
        <dt class="col-sm-2">
            <label style="color:black">Количество заказов:</label>
        </dt>
        @if (Model.OrderAmount == 0)
        {
            <dd class="col-sm-10">
            <label style="color:black">Заказов нет.</label>
            </dd>
        }
        else
        {
            <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.OrderAmount)
            </dd>
        }


        <dt class="col-sm-2">
            <label style="color:black">Дата регистрации.</label>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateAdd)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Удалить" class="btn btn-danger m-2" />
        <a asp-action="Index">Вернуться ко списку</a>
    </form>
</div>
