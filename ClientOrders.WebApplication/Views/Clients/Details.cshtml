@model ClientOrders.Data.Models.Entities.Client

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Информация</h1>

<div>
    <h4>Клиент: @ViewData["ClientName"]</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            <label style="color:black">ID Клиента:</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class = "col-sm-2">
            <label style="color:black">Имя клиента:</label>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt class = "col-sm-2">
            <label style="color:black">Фамилия клиента:</label>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SecondName)
        </dd>
        <dt class = "col-sm-2">
            <label style="color:black">Номер телефона:</label>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PhoneNum)
        </dd>
        <dt class = "col-sm-2">
            <label style="color:black">Количество заказов:</label>
        </dt>
        @if (Model.OrderAmount == 0)
        {
            <dd class="col-sm-10">
                <label style="color:black">Заказов нет.</label>
            </dd>
        }
        else
        {
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.OrderAmount)
            </dd>
        }

        <dt class = "col-sm-2">
            <label style="color:black">Дата регистрации:</label>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateAdd)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Редактировать</a> |
    <a asp-action="Index">Вернуться к списку</a>
</div>
